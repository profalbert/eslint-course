{
  "env": { // определяет в каких средах будет работать код
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb/base"], // наследует настройки другой конфигурации
  "rules": { // настраиваем определенные правила для нашего кода
    "semi": "off",
    "no-multiple-empty-lines": "off",
    "no-unused-vars": "warn",
    "arrow-parens": "off",
    "comma-dangle": "off",
    "require-jsdoc": "off",
    "operator-linebreak": "off",
    "object-curly-spacing": "off",
    "linebreak-style": "off"
  },
  "parser": "", // указывается parser (анализатор) кода
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [] // плагины для более расширенной работы eslint
}